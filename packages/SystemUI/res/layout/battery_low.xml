<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#00000000"
    > 

	    <TextView android:id="@+id/subtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textColor="#ffffffff"
		android:gravity="start"
		android:text="@string/battery_low_subtitle"
		android:visibility="gone"
		/>
	    
	    <TextView android:id="@+id/level_percent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textColor="#ffffffff"
		android:gravity="start"
		android:paddingBottom="16dp"
		android:visibility="gone"
		/>

	    <ImageView android:id="@+id/image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/battery_low_battery1"
		/>  


	   <TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffffff"
		android:textSize="25sp"
		android:layout_centerHorizontal="true"
	       android:layout_marginTop="200dip"
		android:text="@string/please_charge_subtitle"/>


	 <TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffffff"
		android:textSize="25sp"
		android:layout_centerHorizontal="true"
	       android:layout_marginTop="240dip"
		android:text="@string/precent_title"/>


</RelativeLayout>


